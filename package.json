{
  "name": "payload-next",
  "description": "Real-world web application builted on top of NextJS framework and PayloadCMS",
  "author": "Merchance",
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "NODE_ENV=production node dist/index.js",
    "dev": "node -r ts-node/register/transpile-only -r tsconfig-paths/register dev.js",
    "build:next": "next build",
    "build:server": "tsc --project tsconfig.server.json",
    "build:payload": "payload build",
    "build": "NODE_ENV=production npm run build:payload && npm run build:server && NEXT_BUILD=true node dist/index.js",
    "seed": "node seed/index.js",
    "serve": "NODE_ENV=production node dist/index.js",
    "lint": "next lint",
    "prepare": "husky install"
  },
  "cacheDirectories": [
    ".next/cache"
  ],
  "dependencies": {
    "@babel/register": "^7.16.0",
    "@headlessui/react": "^1.4.2",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "keen-slider": "^5.5.1",
    "next": "^12.0.4",
    "payload": "^0.12.3",
    "payload-plugin-cloud-storage": "^1.0.5",
    "react": "^18.0.0-beta-149b420f6-20211119",
    "react-dom": "^18.0.0-beta-149b420f6-20211119",
    "react-feather": "^2.0.9",
    "react-hook-form": "^7.20.2",
    "react-hot-toast": "^2.1.1",
    "react-share": "^4.4.0",
    "sass": "^1.43.4",
    "sitemap": "^7.0.0",
    "swr": "^1.0.1",
    "tsconfig-paths": "^3.12.0"
  },
  "devDependencies": {
    "@tailwindcss/line-clamp": "^0.2.2",
    "@types/express": "^4.17.13",
    "@types/gtag.js": "^0.0.8",
    "@types/react": "^17.0.36",
    "@types/react-dom": "^17.0.11",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.3.0",
    "eslint-config-next": "^12.0.4",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "postcss": "^8.3.11",
    "prettier": "^2.4.1",
    "pretty-quick": "^3.1.2",
    "tailwindcss": "^3.0.0-alpha.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  },
  "prettier": {
    "semi": false,
    "printWidth": 200,
    "arrowParens": "always",
    "trailingComma": "es5"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  }
}
